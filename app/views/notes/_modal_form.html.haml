#form_note
  .modal-header
    %h5.modal-title
      = "#{@note.new_record? ? "Crear Nota" : "Editar Nota"}"
    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
      %span{"aria-hidden" => "true"} ×
  = simple_form_for(@note, remote: true, 'data-type' => :script) do |f|
    .modal-body
      .form-group
        = f.input :title, label: false, input_html: { class: 'form-control', placeholder: 'Titulo', maxlength: 30, required: "required" }
      .form-group
        = f.input :content, as: :text, label: false, input_html: { class: 'form-control', placeholder: 'Añade una Nota ...', required: "required" }
      .form-group
        = f.input :color, as: :minicolors, label: false, input_html: {  class: 'form-control color-picker' }
      .form-group
        = f.button :submit, "#{@note.new_record? ? "Crear" : "Editar"}", class: 'btn btn-primary'
    .modal-footer

:javascript
  jQuery( function($) {
    $('.color-picker').minicolors()
    $("#new_contact")
    .bind("ajax:success", function(event, data, status, xhr) {
      $(this).each(function(){
        this.reset();
      });       
      $("#new-contact-modal").modal("hide");
    })
  } );
